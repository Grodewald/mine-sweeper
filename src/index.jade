doctype html
html(lang="en")
  head
    title Mine Sweeper
    link(rel="stylesheet" href="css/styles.css")
  body
    div(id="container")
      div(id="gameTimeContainer")
        div(id="timing" ng-controller="timingController")
          div(ng-include="templateUri")
        div(id="game" ng-controller="gameController")
          div(ng-include="templateUri")
      div(id="boardContainer")
        div(id="board" ng-controller="mineSweeperBoardController")
          div(ng-include="templateUri")
    script(data-main="js/main" src="js/lib/requirejs/require.js")
